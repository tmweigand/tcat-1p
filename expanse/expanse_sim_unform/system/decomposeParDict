FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 1000;

method          simple;

// Simple decomposition: specify the number of subdivisions in each direction
simpleCoeffs
{
    n           (10 10 10);    // Number of divisions in x, y, z directions
    delta       0.001;      // Allows for non-cuboidal cells
}


